<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/back"
        >

        <Button
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            app:icon="@drawable/arrow"
            app:iconTint="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textFontWeight="@integer/material_motion_duration_short_1"
            android:textSize="26sp"
            android:textStyle="bold"

            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHeight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:text="@string/blackTheme"
            android:textColor="@android:color/black"
            android:textSize="@dimen/secondMenuTextSize" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/off" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHeight">

        <TextView
            android:id="@+id/text_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:text="@string/share"
            android:textColor="@android:color/black"
            android:textSize="@dimen/secondMenuTextSize" />

        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="@dimen/icoWidthHeight"
            android:layout_height="@dimen/icoWidthHeight"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="19dp"
            android:src="@drawable/lm_share" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHeight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:text="@string/support"
            android:textColor="@android:color/black"
            android:textSize="@dimen/secondMenuTextSize" />

        <ImageView
            android:layout_width="@dimen/icoWidthHeight"
            android:layout_height="@dimen/icoWidthHeight"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="19dp"

            android:src="@drawable/lm_support" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHeight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:text="@string/agreements"
            android:textColor="@android:color/black"
            android:textSize="@dimen/secondMenuTextSize" />

        <ImageView
            android:layout_width="@dimen/icoWidthHeight"
            android:layout_height="@dimen/icoWidthHeight"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="19dp"

            android:src="@drawable/lm_arrow" />
    </RelativeLayout>

</LinearLayout>