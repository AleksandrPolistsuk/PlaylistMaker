<?xml version="1.0" encoding="utf-8"?>
<resources>

<style name="ButtonMainPage">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:backgroundTint">@color/white</item>
    <item name="iconGravity">textStart</item>
    <item name="iconTint">@color/black</item>
    <item name="cornerRadius">@dimen/corner</item>
    <item name="android:textSize">@dimen/buttonTextSize</item>
    <item name="iconPadding">@dimen/iconPaddingSize</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:fontFamily">@font/ys_display_medium</item>
    <item name="android:textFontWeight">500</item>
    <item name="android:stateListAnimator">@null</item>
    <item name="android:textAllCaps">false</item>

</style>

    <style name="MainPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/blue</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SettingsPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsPageBackButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">@integer/material_motion_duration_short_1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingsActivityStringText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/secondMenuTextSize</item>
    </style>
    <style name="IconColorScreens">
        <item name ="android:fillColor">@color/grey</item>
    </style>
    <style name="Switcher">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:src">@drawable/off</item>
    </style>
    <style name="SettingsArrowBackButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="iconTint">?attr/ButtonSettingsScreenColor</item>
    </style>

    <style name="SettingsScreenIconSettings">
        <item name="android:layout_width">@dimen/icoWidthHeight</item>
        <item name="android:layout_height">@dimen/icoWidthHeight</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginBottom">19dp</item>
    </style>

</resources>